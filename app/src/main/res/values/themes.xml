<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Monthly" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <!-- Secondary brand color. -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/background</item>
        <!-- Background color. -->
        <item name="background">@color/bg_light</item>
        <item name="android:windowBackground">@color/bg_light</item>
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/submain</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.Splash" parent="Theme.AppCompat.NoActionBar">

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/background</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">?attr/background</item>
        <!-- Background color. -->
        <item name="background">@color/main</item>
        <item name="android:windowBackground">@color/main</item>
    </style>

